.list-srea{
  width: 100%;
  height: auto;
}
.list-item{
  width: 100%;
  height: 85rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(217,217,217,0.4);
}
.list-item image{
  width: 40rpx;
  height: 40rpx;
  margin-left:30rpx;
}
.list-item text{
  flex-grow: 1;
  font-size: 30rpx;
  margin-left:30rpx;
}
.list-item-btn{
  width: 50rpx;
  height: 56rpx;
  position: relative;
}
.list-item-btn::after{
  content: "";
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  left: 0;
  top: 28%;
  border: 1px solid #d9d9d9;
  border-top-color:transparent;
  border-left-color:transparent;
  transform: rotate(-45deg);
}
